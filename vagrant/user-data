  units:
  - name: etcd.service
    command: start
  - name: fleet.service
    command: start
  - name: docker-tcp.socket
    command: start
    enable: true
    content: |
      [Unit]
      Description=Docker Socket for the API

      [Socket]
      ListenStream=2375
      Service=docker.service
      BindIPv6Only=both

      [Install]
      WantedBy=sockets.target
  - name: jenkins.service
    command: start
    enable: true
    content: |-
      [Unit]
      Description=Jenkins Service
      After=docker.service nexus.service sonarqube.service
      Requires=docker.service nexus.service sonarqube.service

      [Service]
      TimeoutStartSec=0
      RestartSec=5
      Restart=on-failure
      ExecStartPre=-/usr/bin/docker kill jenkins
      ExecStartPre=-/usr/bin/docker rm -f jenkins
      #ExecStart=/usr/bin/docker run --rm --name jenkins -p 8080:8080 -p 50000:50000 --link sonarqube:sonarqube --link nexus:nexus -v /home/core/docker/volumes/jenkins/root/.gradle:/root/.gradle -v /home/core/docker/volumes/jenkins/var/jenkins_home:/var/jenkins_home -v /home/core/docker/volumes/jenkins/usr/share/jenkins/ref/plugins:/usr/share/jenkins/ref/plugins -v /var/run/docker.sock:/var/run/docker.sock ordina-cd/jenkins
      ExecStart=/usr/bin/docker run --rm --name jenkins -p 8080:8080 -p 50000:50000 --link sonarqube:sonarqube --link nexus:nexus -v /home/core/docker/volumes/jenkins/root/.gradle:/root/.gradle -v /home/core/docker/volumes/jenkins/var/jenkins_home:/var/jenkins_home -v /var/run/docker.sock:/var/run/docker.sock ordina-cd/jenkins
      ExecStop=/usr/bin/docker stop jenkins
  - name: nexus.service
    command: start
    enable: true
    content: |- 
      [Unit]
      Description=Nexus Service
      After=docker.service
      Requires=docker.service
  
      [Service]
      TimeoutStartSec=0
      RestartSec=5
      Restart=on-failure
      ExecStartPre=-/usr/bin/docker kill nexus
      ExecStartPre=-/usr/bin/docker rm nexus
      ExecStartPre=/bin/chown -R 200 /home/core/docker/volumes/nexus/sonatype-work
      ExecStartPre=-rm -f /home/core/docker/volumes/nexus/sonatype-work/conf/logback.xml
      ExecStart=/usr/bin/docker run --rm -p 8081:8081 -v /home/core/docker/volumes/nexus/sonatype-work:/sonatype-work --name nexus sonatype/nexus:2.11.3-01
      ExecStop=/usr/bin/docker stop nexus
  - name: sonarqube.service
    command: start
    enable: true
    content: |-
      [Unit]
      Description=SonarQube Service
      After=docker.service
      Requires=docker.service

      [Service]
      TimeoutStartSec=0
      RestartSec=5
      Restart=on-failure
      ExecStartPre=-/usr/bin/docker kill sonarqube
      ExecStartPre=-/usr/bin/docker rm sonarqube
      ExecStart=/usr/bin/docker run --rm --name sonarqube -p 9000:9000 -p 9092:9092 sonarqube:5.1.1
      ExecStop=/usr/bin/docker stop sonarqube
