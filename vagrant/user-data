#cloud-config

---
coreos:
  etcd:
    addr: $public_ipv4:4001
    peer-addr: $public_ipv4:7001
    discovery: https://discovery.etcd.io/f93b1b202a02b26612607ae210bcb84a
  fleet:
    public-ip: $public_ipv4
  flannel:
    interface: $public_ipv4
  units:
  - name: etcd.service
    command: start
  - name: fleet.service
    command: start
  - name: docker-tcp.socket
    command: start
    enable: true
    content: |
      [Unit]
      Description=Docker Socket for the API

      [Socket]
      ListenStream=2375
      Service=docker.service
      BindIPv6Only=both

      [Install]
      WantedBy=sockets.target
  - name: jenkins.service
    command: start
    enable: true
    content: |-
      [Unit]
      Description=Jenkins Service
      After=docker.service nexus.service rundeck.service sonarqube.service
      Requires=docker.service nexus.service rundeck.service sonarqube.service

      [Service]
      TimeoutStartSec=0
      RestartSec=5
      Restart=on-failure
      ExecStartPre=-/usr/bin/docker kill jenkins
      ExecStartPre=-/usr/bin/docker rm -f jenkins
      ExecStart=/usr/bin/docker run --rm --name jenkins -p 8080:8080 -p 50000:50000 --link sonarqube:sonarqube --link rundeck:rundeck --link nexus:nexus -v /home/core/volumes/jenkins/root/.gradle:/root/.gradle -v /home/core/docker/volumes/jenkins/var/jenkins_home:/var/jenkins_home -v /home/core/docker/volumes/jenkins/usr/share/jenkins/ref/plugins:/usr/share/jenkins/ref/plugins -v /var/run/docker.sock:/var/run/docker.sock ordina-cd/jenkins
      ExecStop=/usr/bin/docker stop jenkins
  - name: rundeck.service
    command: start
    enable: true
    content: |-
      [Unit]
      Description=Rundeck Service
      After=docker.service nexus.service
      Requires=docker.service nexus.service

      [Service]
      TimeoutStartSec=0
      RestartSec=5
      Restart=on-failure
      ExecStartPre=-/usr/bin/docker kill rundeck
      ExecStartPre=-/usr/bin/docker rm rundeck
      ExecStart=/usr/bin/docker run --rm --name rundeck -p 4440:4440 -e SERVER_URL=http://127.0.0.1:4440 --link nexus:nexus jordan/rundeck:latest
      ExecStop=/usr/bin/docker stop rundeck
  - name: nexus.service
    command: start
    enable: true
    content: |-
      [Unit]
      Description=Nexus Service
      After=docker.service
      Requires=docker.service

      [Service]
      TimeoutStartSec=0
      RestartSec=5
      Restart=on-failure
      ExecStartPre=-/usr/bin/docker kill nexus
      ExecStartPre=-/usr/bin/docker rm nexus
      ExecStart=/usr/bin/docker run --rm -p 8081:8081 --name nexus sonatype/nexus:oss
      ExecStop=/usr/bin/docker stop nexus
  - name: sonarqube.service
    command: start
    enable: true
    content: |-
      [Unit]
      Description=SonarQube Service
      After=docker.service
      Requires=docker.service

      [Service]
      TimeoutStartSec=0
      RestartSec=5
      Restart=on-failure
      ExecStartPre=-/usr/bin/docker kill sonarqube
      ExecStartPre=-/usr/bin/docker rm sonarqube
      ExecStart=/usr/bin/docker run --rm --name sonarqube -p 9000:9000 -p 9092:9092 sonarqube:latest
      ExecStop=/usr/bin/docker stop sonarqube